<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


        <Button
            android:id="@+id/add_result"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetBottom="0dp"
            android:paddingLeft="2dp"
            android:paddingTop="1dp"
            android:paddingRight="2dp"
            android:paddingBottom="1dp"
            android:text="@string/add_result"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/transaction_no"
            android:text="20231127001"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"

            app:layout_constraintStart_toEndOf="@+id/add_result"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sender_name"
            android:text="马利军"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/transaction_no"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/plate_number"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:text="5191"
            app:layout_constraintStart_toEndOf="@+id/add_result"
            app:layout_constraintTop_toBottomOf="@+id/transaction_no" />

        <TextView
            android:id="@+id/account_name"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="孙小波"
            app:layout_constraintStart_toEndOf="@+id/sender_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginStart="164dp"
            android:layout_marginTop="8dp"
            android:text="22600"
            app:layout_constraintStart_toEndOf="@+id/plate_number"
            app:layout_constraintTop_toBottomOf="@+id/sender_name"/>

        <TextView
            android:id="@+id/result_price"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="-"
            app:layout_constraintStart_toEndOf="@+id/weight"
            app:layout_constraintTop_toBottomOf="@+id/sender_name" />

        <TextView
            android:id="@+id/result_total_sales"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="-"
            app:layout_constraintStart_toEndOf="@+id/result_price"
            app:layout_constraintTop_toBottomOf="@+id/sender_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
